PROC TREE(LEVEL)
	
	IF LEVEL > 0 THEN
		FORWARD 10
		LEFT LEVEL / 20 
		TREE (LEVEL - 1)
	ELSE
		FORWARD 10
		LEFT 5
	ENDIF

PROC LINE ( LEVEL )
	IF LEVEL < 1 THEN
		FORWARD 10
		LEFT 60
	ELSE 
		RIGHT 50
		FORWARD 10
		LINE (LEVEL - 1)
																													ENDIF

PROC KOCH (LEVEL)
	IF LEVEL == 0 THEN
		FORWARD 5
	ELSE
		KOCH (LEVEL - 1)
		LEFT 60
		KOCH (LEVEL - 1)
		RIGHT 120
		koch (LEVEL - 1)
		LEFT 60
		KOCH (LEVEL - 1)
	ENDIF

